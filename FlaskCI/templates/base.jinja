<!DOCTYPE html>
<html>
  <head>
    <title>{% block title %}Flask CI - {% block page_title %}{{  config.COMPANY_NAME  }}{% endblock %}{% endblock %}</title>
    {% block head_meta %}
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
    {% endblock %}
    {% block head %}
    <link rel="icon" type="image/png" href={{ url_for('static', filename='favicon.ico') }} />
    <link href={{ url_for('static', filename='libs/css/bootstrap.min.css') }} rel="stylesheet">
    <link href={{ url_for('static', filename='css/styles.css') }} rel="stylesheet">
    {% endblock %}
  </head>
  <body>
  
    <div class="container">
      <div class="navbar navbar-default" role="navigation">
        <div>
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ url_for('index') }}">{{ self.title() }}</a>
          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              {% block main_menu %}
              {% for item in main_menu() %}
              <li class="{% if item.active %}active{% endif %}"><a href="{{ url_for(item.page) }}">{{ item.name }}</a></li>
              {% endfor %}
              {% endblock %}
            </ul>
            <ul class="nav navbar-nav navbar-right">
              {% block menu_right %}
              {% endblock %}
              {% if current_user.is_authenticated() %}
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ current_user.email }} <span class="caret"></span></a>
                  <ul class="dropdown-menu" role="menu">
                    <li><a href="{{ url_for('logout_view') }}">Log out</a></li>
                  </ul>
                </li>
              {% endif %}
            </ul>
          </div>
        </div>
      </div>
      {% with messages = get_flashed_messages() %}
        {% if messages %}
          <div class="alert alert-info alert-dismissible">
            {% for message in messages %}
              <p>{{ message }}</p>
            {% endfor %}
          </div>
        {% endif %}
      {% endwith %}
      {% block content %}
      {% endblock %}

    </div>
    

    <script src={{ url_for('static', filename='libs/js/jquery-1.11.0.min.js') }}></script>
    <!-- <script src={{ url_for('static', filename='libs/js/lodash.min.js') }}></script> -->
    <script src={{ url_for('static', filename='libs/js/bootstrap.min.js') }}></script>
    <script src={{ url_for('static', filename='libs/js/bootbox.min.js') }}></script>
    <script src={{ url_for('static', filename='libs/js/select2.min.js') }}></script>
    {% block extra_js %}
    {% endblock %}
  </body>
</html>
